# Backend Security
SECRET_KEY="your_super_secret_key_here_please_change_me" # CHANGE THIS IN YOUR ACTUAL .env FILE!
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"

# Initial User Credentials (for first-time setup)
INITIAL_ADMIN_EMAIL="admin@example.com"
INITIAL_ADMIN_PASSWORD="change_this_strong_password_admin" # CHANGE THIS IN YOUR ACTUAL .env FILE!
INITIAL_TEST_USER_EMAIL="testuser@example.com"
INITIAL_TEST_USER_PASSWORD="change_this_strong_password_testuser" # CHANGE THIS IN YOUR ACTUAL .env FILE!

# LLM Configuration
OPENROUTER_API_KEY="your_openrouter_api_key"
MISTRAL_API_KEY="your_mistral_api_key"
CODESTRAL_API_KEY="your_codestral_api_key" # If using Codestral models
DEFAULT_MODEL="mistralai/mistral-small-latest" # Example: Or any other model from OpenRouter
CODESTRAL_MODEL_NAME="mistralai/codestral-latest" # Example: Or specific Codestral model

# Firebase Configuration
FIREBASE_API_KEY="your_firebase_api_key"
FIREBASE_AUTH_DOMAIN="your_project_id.firebaseapp.com"
FIREBASE_PROJECT_ID="your_firebase_project_id"
FIREBASE_STORAGE_BUCKET="your_project_id.appspot.com"
FIREBASE_MESSAGING_SENDER_ID="your_firebase_messaging_sender_id"
FIREBASE_APP_ID="your_firebase_app_id"
FIREBASE_MEASUREMENT_ID="your_firebase_measurement_id" # Optional

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT="your_google_cloud_project_id" # Can be the same as FIREBASE_PROJECT_ID
GOOGLE_APPLICATION_CREDENTIALS="/path/to/your/service-account-key.json" # For backend services
CLOUD_SQL_INSTANCE_CONNECTION_NAME="your_project:your_region:your_instance" # For Cloud SQL
PUB_SUB_TOPIC_CHUNK_PROCESSING="tria-chunk-processing-topic" # Example topic name
CLOUD_FUNCTION_TRIGGER_URL_CHUNK_PROCESSING="your_cloud_function_http_trigger_url" # If using HTTP trigger for Genkit flow
TRIA_GENKIT_SERVICE_ACCOUNT_EMAIL="your_genkit_service_account_email@your_project_id.iam.gserviceaccount.com" # If Genkit uses a specific SA

# Database Configuration (Choose one: Google Cloud SQL or Local PostgreSQL)

# Option 1: Google Cloud SQL (Recommended for deployed environments)
# Ensure GOOGLE_APPLICATION_CREDENTIALS is set and the user has "Cloud SQL Client" role.
# DB_HOST will typically be /cloudsql/CLOUD_SQL_INSTANCE_CONNECTION_NAME for Cloud SQL Proxy
# or a direct IP if not using the proxy (less common for secure setups).
# DB_USER="your_cloudsql_user"
# DB_PASSWORD="your_cloudsql_password"
# DB_NAME="holograms_db"
# DB_HOST="/cloudsql/your_project:your_region:your_instance" # Or a direct IP
# DB_PORT="5432"

# Option 2: Local PostgreSQL Development Setup (Original Local Config)
# These variables are for a local PostgreSQL instance.
# If using Cloud SQL, comment these out or ensure they match your Cloud SQL Proxy setup if connecting via localhost.
POSTGRES_USER="your_postgres_user"
POSTGRES_PASSWORD="your_postgres_password"
POSTGRES_HOST="localhost" # For local instance or Cloud SQL Proxy
POSTGRES_DB="holograms_db"
POSTGRES_PORT="5432"
POSTGRES_POOL_MIN_SIZE="5"
POSTGRES_POOL_MAX_SIZE="20"

# Genkit Configuration
# GENKIT_API_KEY="your_genkit_api_key" # Only if Genkit has a separate API key for a managed service (less likely for self-hosted/GCP)
GENKIT_FLOW_HTTP_TRIGGER_URL_PROCESS_INTERACTION_CHUNK="your_genkit_http_flow_url_for_interaction_processing" # If the main Genkit flow is HTTP triggered
