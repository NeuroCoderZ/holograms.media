{
  "hosting": [
    {
      "target": "prod",
      "public": "frontend",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [{"source": "**", "destination": "/index.html"}]
    },
    {
      "target": "dev",
      "public": "frontend",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [{"source": "**", "destination": "/index.html"}]
    }
  ],
  "functions": [
    {
      "source": "backend",
      "runtime": "python312",
      "codebase": "holograms-backend",
      "ignore": ["venv", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}