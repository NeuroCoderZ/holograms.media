{
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/webgpu-test",
        "destination": "/webgpu_test.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "backend",
      "runtime": "python312",
      "codebase": "holograms-backend",
      "ignore": ["venv", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}